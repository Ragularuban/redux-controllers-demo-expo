{
    "compilerOptions": {
      "target": "es2017",
      "module": "es2015",
      "sourceMap": true,
      "jsx": "react",
      "lib": [
        "dom",
        "es2017"
      ],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "preserveConstEnums": true,
      "allowSyntheticDefaultImports": true
    },
    "types": [
        "react",
        "react-native",
        "jest"
    ],
    "exclude": [
        "node_modules"
    ],
}